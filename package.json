{
  "name": "@alex-lar/words-shared-types",
  "version": "2.0.1",
  "description": "Shared types between Words packages",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "isLibrary": true,
  "scripts": {
    "ci": "npm run build && npm run check-format && npm run check-exports",
    "watch": "parcel watch",
    "build": "parcel build",
    "format": "prettier --config .prettierrc . --write",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack ."
  },
  "keywords": [
    "types"
  ],
  "author": "Alexander Larin",
  "homepage": "https://github.com/Alex-Lar/words-shared-types",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@parcel/packager-ts": "^2.13.2",
    "@parcel/transformer-typescript-types": "^2.13.2",
    "parcel": "^2.13.2",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alex-Lar/words-shared-types.git"
  },
  "files": [
    "dist"
  ]
}
